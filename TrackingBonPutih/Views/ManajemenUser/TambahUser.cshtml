@model TrackingBonPutih.Models.user
@{
    
    ViewBag.Title = "Tambah User";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    IEnumerable<TrackingBonPutih.Models.departeman> listDept = (IEnumerable<TrackingBonPutih.Models.departeman>)ViewData["listDept"];
}

<h2 style="color:blue">@ViewBag.Title</h2>
<br />
<legend>Tambah User Baru :</legend>

@using (Html.BeginForm())
{
     @Html.ValidationSummary(true)
    <label><p>NPK</p></label>
    <div class="input-control text" data-role="input-control">
        @Html.TextBoxFor(u => u.NPK)
        <p class="text-alert">@Html.ValidationMessageFor(u => u.NPK)</p>
    </div>
    <label><p>Password</p></label>
    <div class="input-control text" data-role="input-control">
         @Html.PasswordFor(u => u.PASS)
         <p class="text-alert">@Html.ValidationMessageFor(u => u.PASS)</p>
    </div>
    <label><p>Password Again</p></label>
    <div class="input-control text" data-role="input-control">
        <input type="password" />
    </div>
    <label><p>Nama</p></label>
    <div class="input-control text" data-role="input-control">
         @Html.TextBoxFor(u => u.nama)
        <p class="text-alert">@Html.ValidationMessageFor(u => u.nama)</p>
    </div>
    <label><p>Jabatan</p></label>
    <div class="input-control text" data-role="input-control">
