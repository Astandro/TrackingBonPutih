<div id="centerpanel" style="margin:0 auto;width:600px;text-align:center"
    <hgroup class="title">
        <h1>@ViewBag.Title</h1>
    </hgroup>
    <br style="height:40px" />
    <div id="loginsection" style="margin:0 auto;width:300px;text-align:left">
    <section id="loginForm">
        <form method="post" action="">

            <legend>User Login</legend>

            <label><h3>NPK</h3></label>
            <div class="input-control text" data-role="input-control">
                <input type="text" autofocus="" placeholder="Masukkan username"></input>
            </div>
            <label><h3>Password</h3></label>
            <div class="input-control password" data-role="input-control">
                <input type="password" placeholder="Masukkan password"></input>
            </div>
            <br style="height:40px"/>
            <button class="button large primary" style="background-color:aquamarine">Log In</button>
        </form>
        <br style="height:500px"/>
    </section>
    </div>
</div>